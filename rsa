import math

def factorize(n):
    factors = []
    
    # Check if the number is divisible by 2
    while n % 2 == 0:
        factors.append(2)
        n = n // 2
    
    # Check for odd prime factors
    for i in range(3, int(math.sqrt(n)) + 1, 2):
        while n % i == 0:
            factors.append(i)
            n = n // i
    
    # If n is still greater than 2, it is a prime factor
    if n > 2:
        factors.append(n)
    
    return factors

# Example usage
num = int(input("Enter the number to factorize: "))
factors = factorize(num)
print(f"{num} = {'*'.join(map(str, factors))}")
